<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/idEnviar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:foregroundTint="#EDEDED"
    android:layerType="hardware"
    tools:context=".view.CadastrarActivity">


    <Button
        android:id="@+id/botaoCadastro"
        android:layout_width="161dp"
        android:layout_height="59dp"
        android:layout_marginStart="75dp"
        android:layout_marginTop="272dp"
        android:backgroundTint="#792EE4"
        android:fadingEdge="horizontal"
        android:onClick="Cadastrar"
        android:text="Cadastrar"
        android:textAlignment="center"
        app:cornerRadius="10dp"
        app:layout_constraintStart_toEndOf="@id/componentes"
        app:layout_constraintStart_toStartOf="@id/componentes"
        app:layout_constraintTop_toTopOf="@id/componentes"
        app:strokeColor="#000000" />

    <View

        android:id="@+id/componentes"
        style="@style/ContainerComponents"
        android:layout_width="312dp"
        android:layout_height="416dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logoCadastro">


    </View>

    <EditText
        android:id="@+id/idName"
        style="@style/Edit_Text"
        android:layout_width="268dp"
        android:layout_height="59dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="44dp"
        android:drawableStart="@drawable/ic_baseline_person_24"
        android:ems="10"
        android:hint="Digite seu Nome:"
        android:inputType="textPersonName"
        app:layout_constraintStart_toEndOf="@id/componentes"
        app:layout_constraintStart_toStartOf="@id/componentes"
        app:layout_constraintTop_toTopOf="@id/componentes"


        />

    <TextView
        android:id="@+id/idLogin"
        android:layout_width="210dp"
        android:layout_height="38dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="350dp"
        android:onClick="Login"
        android:text="JÃ¡ possui conta? Clique aqui"
        android:textAlignment="center"
        android:textColor="#874AE0"
        app:layout_constraintStart_toEndOf="@id/componentes"
        app:layout_constraintStart_toStartOf="@id/componentes"
        app:layout_constraintTop_toBottomOf="@+id/idEmail"
        app:layout_constraintTop_toTopOf="@id/componentes" />

    <EditText
        android:id="@+id/idSenha"
        style="@style/Edit_Text"
        android:layout_width="266dp"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="192dp"
        android:drawableStart="@drawable/ic_baseline_password_24"
        android:ems="10"

        android:hint="Digite sua Senha:"
        android:inputType="textPassword"
        app:layout_constraintStart_toEndOf="@id/componentes"
        app:layout_constraintStart_toStartOf="@id/componentes"

        app:layout_constraintTop_toTopOf="@id/componentes" />

    <EditText
        android:id="@+id/idEmail"
        style="@style/Edit_Text"
        android:layout_width="268dp"
        android:layout_height="54dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="124dp"
        android:drawableStart="@drawable/ic_baseline_email_24"
        android:ems="10"
        android:hint="Digite seu Email:"
        android:inputType="textPersonName"
        app:layout_constraintStart_toEndOf="@id/componentes"
        app:layout_constraintStart_toStartOf="@id/componentes"
        app:layout_constraintTop_toTopOf="@id/componentes" />

    <ImageView
        android:id="@+id/logoCadastro"
        android:layout_width="179dp"
        android:layout_height="127dp"
        android:layout_marginStart="107dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="125dp"
        android:tint="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

</androidx.constraintlayout.widget.ConstraintLayout>