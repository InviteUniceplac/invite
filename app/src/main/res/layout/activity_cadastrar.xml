<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/idEnviar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.CadastrarActivity">

    <Button
        android:id="@+id/botaoCadastro"
        android:layout_width="161dp"
        android:layout_height="59dp"
        android:layout_marginStart="124dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="126dp"
        android:layout_marginBottom="256dp"
        android:onClick="Cadastrar"
        android:text="Cadastrar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idSenha" />

    <EditText
        android:id="@+id/idName"
        android:layout_width="268dp"
        android:layout_height="59dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="156dp"
        android:layout_marginEnd="71dp"
        android:layout_marginBottom="15dp"
        android:ems="10"
        android:hint="Digite seu Nome:"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/idEmail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/idLogin"
        android:layout_width="210dp"
        android:layout_height="38dp"
        android:layout_marginStart="114dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="87dp"
        android:layout_marginBottom="160dp"
        android:onClick="Login"
        android:text="JÃ¡ possui conta? Clique aqui"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/botaoCadastro" />

    <EditText
        android:id="@+id/idSenha"
        android:layout_width="266dp"
        android:layout_height="60dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="73dp"
        android:layout_marginBottom="50dp"
        android:ems="10"
        android:hint="Digite sua Senha:"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/botaoCadastro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idEmail" />

    <EditText
        android:id="@+id/idEmail"
        android:layout_width="268dp"
        android:layout_height="54dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="71dp"
        android:layout_marginBottom="15dp"
        android:ems="10"
        android:hint="Digite seu Email:"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/idSenha"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idName" />
</androidx.constraintlayout.widget.ConstraintLayout>