<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#020101"
    android:backgroundTint="#FFFFFF"
    android:backgroundTintMode="add"
    android:textAlignment="center"
    tools:context=".view.PerfilActivity">

    <TextView
        android:id="@+id/idRetornoEmail"
        android:layout_width="262dp"
        android:layout_height="51dp"
        android:layout_marginStart="126dp"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="233dp"
        android:textAlignment="viewStart"
        android:textColor="#6200ED"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/idRetornoNome"
        android:layout_width="260dp"
        android:layout_height="48dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="4dp"
        android:textAlignment="viewStart"
        android:textColor="#6200ED"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/textView6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="336dp"
        android:layout_height="37dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="51dp"
        android:layout_marginEnd="25dp"
        android:background="#FFFFFF"
        android:text="UsuÃ¡rio"
        android:textColor="#6200ED"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/idRetornoNome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="337dp"
        android:layout_height="37dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="24dp"
        android:text="Email:"
        android:textColor="#6200ED"
        android:textSize="20sp"
        app:drawableTint="#FEFEFE"
        app:layout_constraintBottom_toTopOf="@+id/idRetornoEmail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idRetornoNome" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="154dp"
        android:layout_height="135dp"
        android:layout_marginStart="125dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="132dp"
        android:layout_marginBottom="51dp"
        android:background="#FEFEFE"
        android:tint="#6200EC"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

</androidx.constraintlayout.widget.ConstraintLayout>