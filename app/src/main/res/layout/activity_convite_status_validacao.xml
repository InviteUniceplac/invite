<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ConviteStatusValidacao">

    <ImageView
        android:id="@+id/imagemStatusValidacao"
        android:layout_width="360dp"
        android:layout_height="360dp"
        android:layout_marginTop="64dp"
        android:contentDescription="Imagem dinÃ¢mica"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/done" />

    <TextView
        android:id="@+id/messagemValidacao"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="83dp"
        android:text="@string/progresso_convite"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagemStatusValidacao" />

    <ProgressBar
        android:id="@+id/progressoValidacao"
        style="?android:attr/progressBarStyle"
        android:layout_width="360dp"
        android:layout_height="360dp"
        android:outlineSpotShadowColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/imagemStatusValidacao"
        app:layout_constraintEnd_toEndOf="@+id/imagemStatusValidacao"
        app:layout_constraintStart_toStartOf="@+id/imagemStatusValidacao"
        app:layout_constraintTop_toTopOf="@+id/imagemStatusValidacao"
        tools:visibility="visible" />
</androidx.constraintlayout.widget.ConstraintLayout>