<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/idEnviar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:foregroundTint="#EDEDED"
    android:layerType="hardware"
    tools:context=".view.CadastrarActivity">


    <Button
        android:id="@+id/btnConfirmar"
        android:layout_width="166dp"
        android:layout_height="63dp"
        android:layout_marginStart="75dp"
        android:layout_marginTop="308dp"
        android:backgroundTint="#792EE4"
        android:fadingEdge="horizontal"
        android:onClick="trocarSenha"
        android:text="Confirmar"
        android:textAlignment="center"
        app:cornerRadius="10dp"
        app:layout_constraintStart_toEndOf="@id/componentes"
        app:layout_constraintStart_toStartOf="@id/componentes"
        app:layout_constraintTop_toTopOf="@id/componentes"
        app:strokeColor="#000000" />

    <View

        android:id="@+id/componentes"
        style="@style/ContainerComponents"
        android:layout_width="312dp"
        android:layout_height="389dp"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="118dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logoCadastro"
        app:layout_constraintVertical_bias="0.512">


    </View>

    <EditText
        android:id="@+id/idEmailFinal"
        style="@style/Edit_Text"
        android:layout_width="268dp"
        android:layout_height="59dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="104dp"
        android:drawableStart="@drawable/ic_baseline_email_24"
        android:ems="10"
        android:hint="Digite seu email:"
        android:inputType="textPersonName"
        app:layout_constraintStart_toEndOf="@id/componentes"
        app:layout_constraintStart_toStartOf="@id/componentes"
        app:layout_constraintTop_toTopOf="@id/componentes" />

    <EditText
        android:id="@+id/idEmailInicial"
        style="@style/Edit_Text"
        android:layout_width="268dp"
        android:layout_height="54dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="196dp"
        android:drawableStart="@drawable/ic_baseline_email_24"
        android:ems="10"
        android:hint="Confirme seu email:"
        android:inputType="textPersonName"
        app:layout_constraintStart_toEndOf="@id/componentes"
        app:layout_constraintStart_toStartOf="@id/componentes"
        app:layout_constraintTop_toTopOf="@id/componentes" />

    <ImageView
        android:id="@+id/logoCadastro"
        android:layout_width="179dp"
        android:layout_height="127dp"
        android:layout_marginStart="107dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="125dp"
        android:tint="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="227dp"
        android:layout_height="36dp"
        android:layout_marginTop="296dp"
        android:drawableStart="@drawable/ic_baseline_person_24"
        android:text="Trocar Email"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>