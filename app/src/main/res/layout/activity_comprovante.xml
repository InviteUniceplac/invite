<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

            <ImageView
                android:id="@+id/iv_logo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:background="#00000000"
                android:contentDescription="@string/descricao_logo"
                app:srcCompat="@drawable/logo" />

            <TextView
                android:id="@+id/tv_titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/inter"
                android:text="@string/app_name"
                android:textColor="#fff"
                android:textSize="28sp"
                android:textStyle="bold"
                app:layout_anchor="@+id/appbar"
                app:layout_anchorGravity="top|center" />
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <RelativeLayout
        android:id="@+id/rl_comprovante"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_margin="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="86dp"
        android:layout_marginEnd="20dp"
        android:background="#F5F4F4"
        app:layout_anchorGravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appbar">

        <ImageView
            android:id="@+id/iv_ic_comprovante"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_margin="20dp"
            android:contentDescription="@string/descricao_logo"
            app:srcCompat="@drawable/comprovante" />

        <TextView
            android:id="@+id/tv_funcionalidade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="8dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@+id/iv_ic_comprovante"
            android:fontFamily="@font/inter"
            android:text="@string/comprovante_participacao"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_anchorGravity="top|center" />

        <TextView
            android:id="@+id/tv_nome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_ic_comprovante"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="3dp"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_nome"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="3dp"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_horario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_data"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="3dp"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_local"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_horario"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="3dp"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/iv_certificado"
            android:layout_width="135dp"
            android:layout_height="135dp"
            android:layout_below="@+id/tv_local"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="118dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="118dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/comprovante" />

        <TextView
            android:id="@+id/tv_informativo_download"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_certificado"
            android:layout_alignParentStart="true"
            android:layout_marginStart="98dp"
            android:layout_marginTop="26dp"
            android:text="@string/inf_download_comprovante"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/iv_download_comprovante"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/iv_certificado"
            android:layout_marginStart="10dp"
            android:layout_marginTop="36dp"
            android:layout_toEndOf="@+id/tv_informativo_download"
            app:srcCompat="@drawable/download" />
    </RelativeLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/comprovante_menu_inferior" />
</androidx.constraintlayout.widget.ConstraintLayout>