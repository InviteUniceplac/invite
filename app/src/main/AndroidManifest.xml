<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Invite"
        tools:targetApi="31">

        <!-- SERVICES -->
        <service
            android:name=".services.QrCodeService"
            android:enabled="true"
            android:exported="true" />

        <service
            android:name=".services.ConviteService"
            android:enabled="true"
            android:exported="true" />

        <!-- ACTIVITIES -->

        <!-- HOME -->
        <activity
            android:name=".view.HomeActivity"
            android:exported="false">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />

            <intent-filter>
                <category android:name="android.intent.category.HOME" />
            </intent-filter>
        </activity>

        <!-- CADASTRO -->
        <activity
            android:name=".view.CadastrarActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- LOGIN -->
        <activity
            android:name=".view.LoginActivity"
            android:exported="false">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>

        <!-- EVENTOS -->
        <activity
            android:name=".view.EventosActivity"
            android:exported="false">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>

        <!-- GERAR CONVITE -->
        <activity
            android:name=".view.GerarConviteActivity"
            android:exported="false">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>

        <!-- COMPROVANTE -->
        <activity
            android:name=".view.ComprovanteActivity"
            android:exported="false">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
    </application>

</manifest>